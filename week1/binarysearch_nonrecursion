#include<stdio.h>
//int binary_search(int,int[],int);
int main(){
    int arr[10],k,n,i,result;
    printf("Enter no of elements:\n");
    scanf("%d",&n);
    printf("Enter sorted elements of array:\n");
    for(i =0;i<n;i++)
          scanf("%d",&arr[i]);
    printf("Enter search elements:\n");
    scanf("%d",&k);
    result = binary_search(arr,n,k);
        if(result == -1)
            printf("Element not found in given array\n");
        else
           printf("Element found at %d position\n",result);

    }
int binary_search(int arr[],int n,int k){
        int low =0,mid;
        int high = n-1;
        while(low<=high){
             mid = (low+high)/2;
            if(arr[mid] == k){
               return mid+1 ;
            }
            else if(arr[mid]<k){
              low = mid+1;
            }
            else if(arr[mid]>k){
                high = mid-1;
            }
        }
        return -1;
}
